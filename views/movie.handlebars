{{!-- Movie card template with Tailwind --}}

<div class="bg-white rounded-lg shadow-md p-6 movie-card">
  <h2 class="font-bold text-lg mb-2">Movie Title: {{title}}</h2>
  <div class="text-gray-600 mb-2">Average Rating: {{avg_rating}}</div>
  <div class="text-gray-600 mb-2">Release Year: {{release_year}}</div>
  <div class="text-gray-600 mb-2">Director: {{director}}</div>
  <div class="text-gray-600 mb-2">Length: {{length}}</div>
  <p class="text-gray-600 mb-2">{{description}}</p>
</div>
